generator client {
  provider = "prisma-client-js"
  output = "../generated"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id                String                @id @default(uuid(4))
  email             String                @unique
  username          String                @unique
  passwordHash      String
  createdAt         DateTime              @default(now())
  updatedAt         DateTime              @updatedAt
  deletedAt         DateTime?
  method            AuthMethod            @default(CREDENTIALS)
  sessions          Session[]
  emailConfirmation EmailConfirmationUser?

  @@map("users")
}

// здесь было userId unique удалил, потому что у одного юзера может
// быть много сессий
model Session {
  deviceId       String   @id @default(uuid(4))
  deviceName     String
  ip             String
  lastActiveDate DateTime @updatedAt
  expireAt       DateTime
  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model EmailConfirmationUser {
  id           String   @id @default(uuid(4))
  expiresAt    DateTime
  code         String   @unique
  verification Boolean  @default(false)
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())

  @@map("email-confirmation")
}

enum AuthMethod {
  CREDENTIALS
  OAUTH
}
